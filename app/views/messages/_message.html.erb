<div class="chat_main_box">
    <div class="chat_main_up">
      <div class="chat_main_username">
        <%= message.user.name %>
      </div>
      <div class="chat_main_date">
        <%= l message.created_at %>
      </div>
    </div>
    <div class="chat_main_bottom">
      <div class="chat_main_message">
        <%= message.content %>
      </div>
      <%= image_tag message.image.variant(resize: '500x500'), 
      class: 'message-image' if message.image.attached? %>
    </div>
  </div>